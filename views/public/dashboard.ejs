        margin: 0 auto;
        text-align: center;
        overflow-x: hidden;
    }
    
    a {
        color: #4154f1;
        text-decoration: none;
    }
    
    a:hover {
        color: #717ff5;
        text-decoration: none;
    }
    
    .logo h1 {
        color: white;
    }
    
    .ins_form label {
        color: white;
    }
    
    .ins_form input {
        max-width: 80%;
    }
    
